

<iframe class="email-preview" src="<%= (request.fullpath+"&load_it=true").gsub("?","/?") %>">
  
</iframe>



<script type="text/javascript" charset="utf-8">
  $(window).load(function() {
    var height = $('.email-preview').contents().height();
    $('.email-preview').css('height',height);
  });
</script>
